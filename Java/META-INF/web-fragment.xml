<?xml version="1.0" encoding="UTF-8"?>

<!-- =================================== -->
<!-- YUI Compressor filter configuration -->
<!-- =================================== -->

<web-fragment xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd"
	id="YUICompressorFilter" version="3.0">

	<display-name>YUICompressor Filter</display-name>
	<name>YUICompressorFilter</name>

	<!-- Fragment order, compression can run at any time, but this declaration
		 just insures that it is after CSS generation if used in conjunction
		 with the LessCSS Filter -->
	<ordering>
		<before>
			<name>LessCSSFilter</name>
		</before>
	</ordering>

</web-fragment>
